<h1>Edit Profile</h1>
<form action="/edit-profile" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{user.name}}" required /><br />

  <label for="location">Location:</label>
  <input type="text" id="location" name="location" value="{{user.location}}" /><br />
  
  {{#ifEquals user.type "employer"}}
    <label for="budget">Budget:</label>
    <input type="number" id="budget" name="budget" value="{{employer.budget}}" required /><br />
  {{else}}
    <label for="bio">Bio:</label>
    <textarea id="bio" name="bio" required>{{freelancer.bio}}</textarea><br />

    <label for="profile_picture">Profile picture link:</label>
    <input type="text" id="profile_picture" name="profile_picture" value="{{freelancer.profile_picture}}" /><br />
  {{/ifEquals}}
  
  <button type="submit">Update Profile</button>
</form>

<h2>Add a New Pet</h2>
<form action="/add-pet" method="POST">
  <div>
    <label for="name">Pet Name:</label>
    <input type="text" id="name" name="name" required>
  </div>
  <div>
    <label for="pet_type">Pet Type:</label>
    <select id="pet_type" name="pet_type" required>
      <option value="cat">Cat</option>
      <option value="dog">Dog</option>
    </select>
  </div>
  <div>
    <label for="age">Age:</label>
    <input type="number" id="age" name="age" required>
  </div>
  <div>
    <label for="special_needs">Special Needs:</label>
    <textarea id="special_needs" name="special_needs"></textarea>
  </div>
  <button type="submit">Add Pet</button>
</form>

<h2>My Pets</h2>
{{#each pets}}
<div class="pet-card">
  <h3>{{this.name}}</h3>
  <p>Type: {{this.pet_type}}</p>
  <p>Age: {{this.age}}</p>
  <p>Special Needs: {{this.special_needs}}</p>
</div>
{{/each}}
